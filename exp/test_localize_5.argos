<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0"
                ticks_per_second="10"
                random_seed="124" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <kilobot_controller id="kbc">
      <actuators>
        <differential_steering implementation="default" />
        <leds implementation="default" medium="leds" />
        <kilobot_communication implementation="default" />
      </actuators>
      <sensors>
        <kilobot_communication implementation="default" medium="kilocomm" />
        <kilobot_light implementation="rot_z_only" />
      </sensors>
      <params behavior="build/topology/src/topology" />
    </kilobot_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="2, 2, 1" center="0,0,0.5">
    <light id="l0"
           position="0,0,0.95"
           orientation="0,0,0"
           color="yellow"
           intensity="1.0"
           medium="leds"/>

	<kilobot id="kb1">
      <body position="0,0,0" orientation="0,0,0" />
	  <controller config="kbc" />>
	</kilobot>

	<kilobot id="kb2">
      <body position="0.05,0,0" orientation="0,0,0" />
	  <controller config="kbc" />>
	</kilobot>

	<kilobot id="kb3">
      <body position="0,0.05,0" orientation="0,0,0" />
	  <controller config="kbc" />>
	</kilobot>

	<kilobot id="kb4">
      <body position="-0.05,0,0" orientation="0,0,0" />
	  <controller config="kbc" />>
	</kilobot>

	<kilobot id="kb5">
      <body position="0,-0.05,0" orientation="0,0,0" />
	  <controller config="kbc" />>
	</kilobot>

